local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
   Name = "RANDOM HUB",
   Icon = 0,
   LoadingTitle = "RANDOM HUB",
   LoadingSubtitle = "Made by Fortnitelotrade",
   Theme = "Default",
   ToggleUIKeybind = "K",
   ConfigurationSaving = { Enabled = true, FolderName = "RandomHub", FileName = "Big Hub" },
   KeySystem = false
}) 

local PlayerTab = Window:CreateTab("Player", 4483362458)

local GodMode = false

-- YOUR EXACT GOD MODE LOGIC
game:GetService("RunService").Heartbeat:Connect(function()
    local char = game.Players.LocalPlayer.Character
    if not char or not char:FindFirstChild("Humanoid") then return end

    if GodMode then
        if char:FindFirstChild("Animate") then char.Animate.Disabled = true end
        local moveDir = char.Humanoid.MoveDirection
        if moveDir.Magnitude > 0 then
            char.Humanoid:MoveTo(char.HumanoidRootPart.Position + (moveDir * 5))
        end
    else
        if char:FindFirstChild("Animate") then 
            char.Animate.Disabled = false 
        end
    end
end)

PlayerTab:CreateToggle({
   Name = "God Mode",
   CurrentValue = false,
   Flag = "GodMode",
   Callback = function(Value)
      GodMode = Value
   end,
})

PlayerTab:CreateSlider({
   Name = "WalkSpeed",
   Range = {10, 100},
   Increment = 1,
   Suffix = "Speed",
   CurrentValue = 16,
   Flag = "Slider1", 
   Callback = function(Value)
      if game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid") then
         game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
      end
   end,
})
